@using static Shop_Models.Heplers.TrangThai;
@model IEnumerable<Shop_Models.Entities.SanPham>

@{
    ViewData["Title"] = "GetAllSP";
}

<style>
    .table-container {
        border: 1px solid #ddd; /* Màu viền khung */
        border-radius: 5px; /* Đường cong viền */
        padding: 10px; /* Khoảng cách bên trong khung */
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Đổ bóng */
        overflow: auto; /* Cho phép cuộn nếu bảng quá lớn */
    }

    .card {
        border: 1px solid #ddd; /* Màu viền khung */
        border-radius: 5px; /* Đường cong viền */
        padding: 10px; /* Khoảng cách bên trong khung */
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Đổ bóng */
        overflow: auto; /* Cho phép cuộn nếu bảng quá lớn */
    }
    .form-container {
        display: none; /* Ẩn form ban đầu */
    }
</style>
<div class="container">
    <div class="row">
        <div class="container-fluid">
            <div class="row">
                <h1>Quản Lý Sản Phẩm</h1>
                <div class="col-md-8">
                    <div class="table-container" style="height: 430px;">
                        <div class="table-responsive" id="tableContainer">
                            <table class="table" id="SPTable">
                                <thead>
                                    <tr>
                                        <th>Mã Sản Phẩm</th>
                                        <th>Tên Sản Phẩm</th>
                                        <th>Trạng Thái</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => item.MaSanPham)</td>
                                            <td>@Html.DisplayFor(modelItem => item.TenSanPham)</td>
                                            <td>
                                                @if (item.TrangThai == (int)TrangThaiCoBan.HoatDong)
                                                {
                                                    <span class="text-black">Hoạt Động</span>
                                                }
                                                else if (item.TrangThai == (int)TrangThaiCoBan.KhongHoatDong)
                                                {
                                                    <span class="text-black">Không Hoạt Động</span>
                                                }
                                                else
                                                {
                                                    <span class="text-black">Trạng thái không xác định</span>
                                                }
                                            </td>
                                            <td>
                                                <button class="btn btn-primary edit-btn" data-id="@item.IdSanPham" data-ma="@item.MaSanPham" data-ten="@item.TenSanPham" data-trangthai="@item.TrangThai" title="Sửa"><i class="bx bxs-edit"></i></button>
                                                <a asp-area="" asp-controller="SanPham" asp-action="DeleteSP" asp-route-id="@item.IdSanPham" class="btn btn-danger" onclick="return confirm('Bạn chắc chắn có muốn xóa??')" title="Xóa"><i class="bx bxs-trash-alt"></i></a>

                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <button class="btn btn-success" id="showAddFormBtn">Thêm loại mới</button>
                    <div class="card form-container" id="addFormContainer">
                        <div class="card-body">
                            <h2 class="card-title">Thêm sản phẩm mới</h2>
                            <form id="createSanPhamForm" asp-action="CreateSP" method="post">
                                <div class="form-group">
                                    <label for="maSanPham">Mã sản phẩm:</label>
                                    <input type="text" class="form-control" id="maSanPham" name="MaSanPham" />
                                </div>
                                <div class="form-group">
                                    <label for="tenSanPham">Tên sản phẩm:</label>
                                    <input type="text" class="form-control" id="tenSanPham" name="TenSanPham" />
                                </div>
                                <div class="form-group">
                                    <label for="Trangthai">Trạng Thái :</label>
                                    <select class="form-control" id="Trangthai" name="Trangthai">
                                        <option value="">-- Chọn trạng thái --</option>
                                        <option value="1">Hoạt động</option>
                                        <option value="0">Không hoạt động</option>
                                    </select>
                                </div>
                                <div class="text-center mt-3">
                                    <button type="button" onclick="kiemTraTrungMa()" class="btn btn-success">Thêm</button>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="card form-container mt-3" id="editFormContainer">
                        <div class="card-body">
                            <h2 class="card-title">Chỉnh sửa sản phẩm</h2>
                            <form id="editSanPhamForm" asp-action="EditSP" method="post">
                                <input type="hidden" id="editIdSanPham" name="IdSanPham" />
                                <div class="form-group">
                                    <label for="editMaSanPham">Mã sản phẩm:</label>
                                    <input type="text" class="form-control" id="editMaSanPham" name="MaSanPham" />
                                </div>
                                <div class="form-group">
                                    <label for="editTenSanPham">Tên sản phẩm:</label>
                                    <input type="text" class="form-control" id="editTenSanPham" name="TenSanPham" />
                                </div>
                                <div class="form-group">
                                    <label for="editTrangthai">Trạng Thái :</label>
                                    <select class="form-control" id="editTrangthai" name="Trangthai">
                                        <option value="">-- Chọn trạng thái --</option>
                                        <option value="1">Hoạt động</option>
                                        <option value="0">Không hoạt động</option>
                                    </select>
                                </div>
                                <div class="text-center mt-3">
                                    <button type="submit" class="btn btn-primary">Cập nhật</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </div>
</div>

<!-- Thư viện DataTables CSS -->
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.css">

<!-- Thư viện jQuery -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

<!-- Thư viện DataTables JavaScript -->
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.js"></script>

<!-- Thư viện No Pagination UI -->
<script src="https://cdn.datatables.net/1.11.5/js/dataTables.jqueryui.min.js"></script>
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/dataTables.jqueryui.min.css">
<script>
    function kiemTraTrungMa() {
        var maSanPham = document.getElementById("maSanPham").value;
        var maSPDaHienThi = [];
        // Lấy danh sách các mã đã hiển thị trên giao diện
        $("#SPTable tbody tr").each(function () {
            maSPDaHienThi.push($(this).find("td:first").text().trim());
        });
        // Kiểm tra trùng mã với danh sách các mã đã hiển thị
        if (maSPDaHienThi.includes(maSanPham)) {
            alert("Mã đã tồn tại trong dữ liệu. Vui lòng chọn mã khác.");
        } else {
            $("#createSanPhamForm").submit(); // Sử dụng jQuery để submit form
        }
    }
    $(document).ready(function () {
        var table = $('#SPTable').DataTable();
        if (!table || !$.fn.DataTable.isDataTable('#SPTable')) {
            // Nếu bảng chưa được khởi tạo DataTables thì khởi tạo nó
            $('#SPTable').DataTable({
                "scrollY": "250px", // Chiều cao của khu vực lướt
                "paging": true, // Hiển thị chia trang
                "pagingType": "simple_numbers", // Loại chia trang (không có ô vuông nhỏ)
                "lengthMenu": [5, 15, 25, 50], // Lựa chọn số lượng hàng trên mỗi trang
                "renderer": "jqueryui" // Sử dụng renderer của jQuery UI
            });
        }
        // Gắn sự kiện onclick cho nút "Thêm"
        $("#createSanPhamForm button").click(kiemTraTrungMa);
         $(".edit-btn").click(function () {
            var IdSanPham = $(this).data("id");
            var maSanPham = $(this).data("ma");
            var tenSanPham = $(this).data("ten");
            var trangthai = $(this).data("trangthai");

            $("#editIdSanPham").val(IdSanPham);
            $("#editMaSanPham").val(maSanPham);
            $("#editTenSanPham").val(tenSanPham);
            $("#editTrangthai").val(trangthai);

            $("#editFormContainer").show();
            $("#addFormContainer").hide();
        });

        $("#showAddFormBtn").click(function() {
            $("#addFormContainer").show();
            $("#editFormContainer").hide();
        });
    });
</script>