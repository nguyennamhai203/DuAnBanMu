                            <tr>
                                <th style="width: 30px">STT</th>
                                <th>MSP</th>
                                <th>Sản Phẩm</th>
                                <th>Màu</th>
                                <th>G/Nhập</th>
                                <th>G/Bán</th>
                                <th>SL</th>
                                <th>Đ/Bán</th>
                                <th>K/Doanh</th>
                                <th>Select </th>
                                <th>###</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int Stt = 1;
                            }
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td style="width: 30px">@(Stt++)</td>
                                    <td>@item.MaSanPham</td>
                                    <td>
                                        <div class="d-flex align-items-center" style="cursor: pointer" onclick="showModal('@item.SanPhamId')">
