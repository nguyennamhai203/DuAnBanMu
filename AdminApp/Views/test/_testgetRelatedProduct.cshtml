                                        <option value="" selected="">Màu sắc</option>
                                        @if (string.IsNullOrEmpty(ViewData["ValueMauSac"] as string))
                                        {
                                            foreach (var item in (SelectList)ViewData["MauSac"]!)
                                            {
                                                <option value="@item.Text">@item.Text</option>
                                            }
                                        }
                                        else
                                        {
                                            foreach (var item in (SelectList)ViewData["MauSac"]!)
                                            {
                                                if (item.Text == ViewData["ValueMauSac"]!.ToString())
                                                {
                                                    <option value="@item.Text" selected>@item.Text</option>
                                                }
                                                else
                                                {
                                                    <option value="@item.Text">@item.Text</option>
                                                }
                                            }
                                        }

                                    </select>
                                </div>
                                <div class="m-b-10 ml-1">
                                    <select class="select2_active1" onchange="Filter()" style="min-width: 180px;" id="filterSize">
                                        <option value="" selected="">Size</option>
                                        @if (string.IsNullOrEmpty(ViewData["ValueSize"] as string))
                                        {
                                            foreach (var item in (SelectList)ViewData["Size"]!)
                                            {
                                                <option value="@item.Text">@item.Text</option>
                                            }
                                        }
                                        else
                                        {
                                            foreach (var item in (SelectList)ViewData["Size"]!)
                                            {
                                                if (item.Text == ViewData["ValueSize"]!.ToString())
                                                {
                                                    <option value="@item.Text" selected>@item.Text</option>
                                                }
                                                else
                                                {
                                                    <option value="@item.Text">@item.Text</option>
                                                }
                                            }
                                        }
                                    </select>
                                </div>
