@using Newtonsoft.Json
@using Shop_Models.Entities
@model IEnumerable<Shop_Models.Dto.SanPhamChiTietDto>

@{
    ViewData["Title"] = "IndexMain";
}

<!-- Include Highcharts libraries -->
<script src="https://code.highcharts.com/highcharts.js"></script>
<script src="https://code.highcharts.com/modules/exporting.js"></script>
<script src="https://code.highcharts.com/modules/export-data.js"></script>
<script src="https://code.highcharts.com/modules/accessibility.js"></script>

<!-- Highcharts container -->
<div class="btn-group dropend">
    <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
        Thống kê sản phẩm theo
    </button>
    <ul class="dropdown-menu">
        <!-- Dropdown menu links -->
        <li><a class="dropdown-item" href="#" onclick="filterBy('Loai')">Loại</a></li>
        <li><a class="dropdown-item" href="#" onclick="filterBy('ThuongHieu')">Thương hiệu</a></li>
        <li><a class="dropdown-item" href="#" onclick="filterBy('XuatXu')">Xuất xứ</a></li>
        <li><a class="dropdown-item" href="#" onclick="filterBy('MauSac')">Màu sắc</a></li>
        <li><a class="dropdown-item" href="#" onclick="filterBy('ChatLieu')">Chất liệu</a></li>
    </ul>
</div>
<figure class="highcharts-figure">
    <div id="container"></div>
</figure>

<!-- Custom styles for the chart -->
<style>
    .highcharts-figure,
    .highcharts-data-table table {
        min-width: 360px;
        max-width: 800px;
        margin: 1em auto;
    }

    .highcharts-data-table table {
        font-family: Verdana, sans-serif;
        border-collapse: collapse;
        border: 1px solid #ebebeb;
        margin: 10px auto;
        text-align: center;
        width: 100%;
        max-width: 500px;
    }

    .highcharts-data-table caption {
        padding: 1em 0;
        font-size: 1.2em;
        color: #555;
    }

    .highcharts-data-table th {
        font-weight: 600;
        padding: 0.5em;
    }

    .highcharts-data-table td,
    .highcharts-data-table th,
    .highcharts-data-table caption {
        padding: 0.5em;
    }

    .highcharts-data-table thead tr,
    .highcharts-data-table tr:nth-child(even) {
        background: #f8f8f8;
    }

    .highcharts-data-table tr:hover {
        background: #f1f7ff;
    }
</style>

<!-- Script to render the Highcharts chart and handle filtering -->
<script>
    document.addEventListener('DOMContentLoaded', function () {
        renderChart(@Html.Raw(Json.Serialize(Model.Select(x => x.TenSanPham).ToList())), @Html.Raw(Json.Serialize(Model.Select(x => x.SoLuongDaBan).ToList())));
    });

    function renderChart(categories, data) {
        Highcharts.chart('container', {
            chart: {
                type: 'line'
            },
            title: {
                text: 'Thống kê sản phẩm bán chạy'
            },
            xAxis: {
                categories: categories
            },
            yAxis: {
                title: {
                    text: 'Số lượng đã bán'
                }
            },
            plotOptions: {
                line: {
                    dataLabels: {
                        enabled: true
                    },
                    enableMouseTracking: false
                }
            },
            series: [{
                name: 'Sản phẩm',
                data: data
            }]
        });
    }

    function filterBy(criteria) {
        $.ajax({
            url: '@Url.Action("FilterProducts", "Product")',
            type: 'GET',
            data: { filterCriteria: criteria },
            success: function (result) {
                var categories = result.map(item => item.TenSanPham);
                var data = result.map(item => item.SoLuongDaBan);
                renderChart(categories, data);
            }
        });
    }
</script>