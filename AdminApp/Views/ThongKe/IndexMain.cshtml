@model IEnumerable<Shop_Models.Dto.SanPhamChiTietDto>

@{
    ViewData["Title"] = "IndexMain";
}

<h1 style="text-align:center;">Thống kê sản phẩm bán chạy</h1>

<!-- Include Highcharts libraries -->
<script src="https://code.highcharts.com/highcharts.js"></script>
<script src="https://code.highcharts.com/modules/exporting.js"></script>
<script src="https://code.highcharts.com/modules/export-data.js"></script>
<script src="https://code.highcharts.com/modules/accessibility.js"></script>

<!-- Highcharts container -->
<figure class="highcharts-figure">
    <div id="container"></div>
</figure>

<!-- Custom styles for the chart -->
<style>
    .highcharts-figure,
    .highcharts-data-table table {
        min-width: 360px;
        max-width: 800px;
        margin: 1em auto;
    }

    .highcharts-data-table table {
        font-family: Verdana, sans-serif;
        border-collapse: collapse;
        border: 1px solid #ebebeb;
        margin: 10px auto;
        text-align: center;
        width: 100%;
        max-width: 500px;
    }

    .highcharts-data-table caption {
        padding: 1em 0;
        font-size: 1.2em;
        color: #555;
    }

    .highcharts-data-table th {
        font-weight: 600;
        padding: 0.5em;
    }

    .highcharts-data-table td,
    .highcharts-data-table th,
    .highcharts-data-table caption {
        padding: 0.5em;
    }

    .highcharts-data-table thead tr,
    .highcharts-data-table tr:nth-child(even) {
        background: #f8f8f8;
    }

    .highcharts-data-table tr:hover {
        background: #f1f7ff;
    }
</style>

<!-- Script to render the Highcharts chart and handle filtering -->
<script>
    Highcharts.chart('container', {
        chart: {
            type: 'line'
        },
        title: {
            text: 'Top 5 sản phẩm bán chạy'
        },
        xAxis: {
            categories: @Html.Raw(Json.Serialize(Model.Where(x => x.SoLuongDaBan > 0)
                .OrderByDescending(x => x.SoLuongDaBan)
                .Select(x => x.MaSanPhamChiTiet)
                .Take(5)
                .ToList()))
        },
        yAxis: {
            title: {
                text: 'Số lượng đã bán'
            }
        },
        plotOptions: {
            line: {
                dataLabels: {
                    enabled: true
                },
                enableMouseTracking: false
            }
        },
        series: [{
            name: 'Số lượng đã bán',
            data: @Html.Raw(Json.Serialize(Model.Where(x => x.SoLuongDaBan > 0)
                .OrderByDescending(x => x.SoLuongDaBan)
                .Select(x => x.SoLuongDaBan)
                .Take(5)
                .ToList()))

        }]
    });
</script>
