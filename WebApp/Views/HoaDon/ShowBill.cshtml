@using static Shop_Models.Heplers.TrangThai;

@{
    var httpContext = ViewContext.HttpContext;
    float thanhTien = 0;
    float thanhtiengiam = 0;
    float totaltiengiam = 0;
    float total = 0;
    float phaiTra = 0;
    var username = httpContext.Session.GetString("UserName");
}

<style>
    .custom-label {
        background-color: indianred; /* Màu nền */
        border: none; /* Không có viền */
        color: white; /* Màu chữ */
        padding: 15px 32px; /* Đệm trong */
        text-align: center; /* Canh giữa chữ */
        text-decoration: none; /* Không gạch chân */
        display: inline-block; /* Hiển thị như một khối nội tuyến */
        font-size: 16px; /* Kích thước chữ */
        margin: 4px 2px; /* Khoảng cách bên ngoài */
        cursor: pointer; /* Con trỏ chuột khi hover */
        border-radius: 4px; /* Bo góc */
    }

        .custom-label:hover {
            background-color: #45a049; /* Màu nền khi hover */
        }

</style>

<!-- Start Banner Area -->
<section class="banner-area organic-breadcrumb">
    <div class="container">
        <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
            <div class="col-first">
                <h1>Tra Cứu Đơn Hàng</h1>
                <nav class="d-flex align-items-center">
                    <a href="/Home">Home<span class="lnr lnr-arrow-right"></span></a>
                    <a href="/HoaDon/ShowBill">Tra Cứu Đơn Hàng</a>
                </nav>
            </div>
        </div>
    </div>
</section>
<!-- End Banner Area -->
<!--================Order Details Area =================-->
<section class="order_details section_gap">
    <div class="container">
        @if (username != null)
        {
            <a asp-controller="HoaDon" asp-action="GetCustomerPurchaseHistory" asp-route-customerId="@username" class="custom-label ">Lịch sử mua hàng</a>

        }

        <br />
        <br />
        <form asp-controller="HoaDon" asp-action="ShowBill" class="d-flex">
            <input class="form-control find-bill" name="invoiceCode" type="search" placeholder="Nhập mã hóa đơn để tìm kiếm" aria-label="Search">
            <button class="btn btn-outline-success" type="submit">
                <i class="fa fa-search" aria-hidden="true"></i>
            </button>
        </form>
    </div>
    @if (ViewBag.Bill != null)
    {
        <div class="container">
            <h3 class="title_confirmation">
                Cảm ơn bạn. @if (ViewBag.Bill.TrangThaiGiaoHang == 0)
                {
                    <span> Đơn Hàng Của Bạn Đang Chờ xác nhận</span>
                }
                else if (ViewBag.Bill.TrangThaiGiaoHang == 1)
                {
                    <span> Đơn Hàng Của Bạn Đã Được Xác Nhận</span>
                }
                else if (ViewBag.Bill.TrangThaiGiaoHang == 2)
                {
                    <span> Đơn Hàng Của Bạn Đang Được Vận Chuyển</span>
                }
                else if (ViewBag.Bill.TrangThaiGiaoHang == 3)
                {
                    <span>  Đơn Hàng Của Bạn Đã Được Giao </span>
                }
                else if (ViewBag.Bill.TrangThaiGiaoHang == 4)
                {
                    <span> Đơn hàng đã bị hủy</span>
                }

                @*   @if (ViewBag.Bill.TrangThaiThanhToan == 3)
            {
            <span>Trạng thái thanh toán: Đã hoàn thành</span>
            }
            else if (ViewBag.Bill.TrangThaiThanhToan == 1)
            {
            <span>Trạng thái thanh toán: Chưa thanh toán</span>
            } *@
            </h3>
            <h4 class="title_confirmation">Thông tin đặt hàng</h4>

            <div class="row order_d_inner">
                <div class="col-lg-4">
                    <div class="details_item">

                        <ul class="list">
                            <li><a href="#"><span>Mã Hóa Đơn:</span> : @ViewBag.Bill.InvoiceCode</a></li>
                            <li><a href="#"><span>Tên Khách Hàng:</span> : @ViewBag.Bill.TenKhachHang</a></li>
                            <li><a href="#"><span>Số Điện Thoại:</span> : @ViewBag.Bill.PhoneNumber</a></li>
                            <li><a href="#"><span>Ngày Tạo:</span> : @ViewBag.Bill.CreateDate</a></li>
                            <li><a href="#"><span>Phương thức thanh toán:</span> : @ViewBag.Bill.Phuongthucthanhtoan</a></li>

                        </ul>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="details_item">
                        <ul class="list">
                            <li><a href="#"><span>Địa Chỉ Giao Hàng:</span> : @ViewBag.Bill.Address</a></li>
                            <li><a href="#"><span>Địa Chỉ Nhận Hàng</span> : @ViewBag.Bill.Address</a></li>
                            <li>
                                <a href="#">
                                    <span>Trạng thái thanh toán:</span> : @if (ViewBag.Bill.TrangThaiThanhToan == 1 && ViewBag.Bill.TrangThaiGiaoHang == 3)
                                    {
                                        <span> Đã hoàn thành</span>
                                    }
                                    else if (ViewBag.Bill.TrangThaiThanhToan == 1)
                                    {
                                        <span> Đã thanh toán</span>
                                    }
                                    else if (ViewBag.Bill.TrangThaiThanhToan == 0)
                                    {
                                        <span> Chưa thanh toán</span>
                                    }
                                </a>
                            </li>

                            @if (ViewBag.Bill.TrangThaiThanhToan == 1)
                            {
                                <li><a href="#"><span>Ngày Thanh Toán: </span> : @ViewBag.Bill.NgayThanhToan</a></li>

                            }
                            @* <li><a href="#"><span>Total</span> : @ViewBag.Bill.ThanhTien</a></li> *@
                            <li>
                                <a href="#">
                                    <span>Trạng Thái Giao Hàng </span> :  @if (ViewBag.Bill.TrangThaiGiaoHang == 0)
                                    {
                                        <span> Chờ xác nhận</span>
                                    }
                                    else if (ViewBag.Bill.TrangThaiGiaoHang == 1)
                                    {
                                        <span> Đã xác nhận</span>
                                    }
                                    else if (ViewBag.Bill.TrangThaiGiaoHang == 2)
                                    {
                                        <span> Đang vận chuyển</span>
                                    }
                                    else if (ViewBag.Bill.TrangThaiGiaoHang == 3)
                                    {
                                        <span> Đã giao</span>
                                    }
                                    else if (ViewBag.Bill.TrangThaiGiaoHang == 4)
                                    {
                                        <span> Đơn hàng đã bị hủy</span>
                                    }


                                </a>

                            </li>
                        </ul>
                    </div>
                </div>

            </div>
            <div class="order_details_table">
                <h2>Chi tiết đơn hàng</h2>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Mã Sản Phẩm</th>
                                <th scope="col">Màu Sắc</th>
                                <th scope="col">Số Lượng</th>
                                <th scope="col">Giá</th>
                                <th scope="col">Tổng</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var i in ViewBag.ListBillItem)
                            {
                                thanhTien = i.priceBan * i.quantity;
                                total += thanhTien;
                                thanhtiengiam = i.price * i.quantity;
                                totaltiengiam += thanhtiengiam;
                                <tr>
                                    <td>
                                        <p>@i.codeProductDetail</p>
                                    </td>
                                    <td>
                                        <p>@i.mauSac</p>
                                    </td>
                                    <td>
                                        <h5>@i.quantity</h5>
                                    </td>
                                    <td>
                                        <h5>@i.priceBan</h5>
                                    </td>
                                    <td>
                                        <p>@thanhTien</p>
                                    </td>
                                </tr>
                            }

                            <tr><td></td><td></td><td></td><td>Tổng thành tiền sản phẩm: @total</td></tr>
                            @if (totaltiengiam != total)
                            {
                                <tr><td></td><td></td><td></td><td>Tiền giảm giá sản phẩm: @(thanhtiengiam-thanhTien)</td></tr>
                            }
                            <tr><td></td><td></td><td>Giảm Giá Voucher: @ViewBag.Bill.GiamGia %</td><td>Quy Đổi Sang Tiền: @ViewBag.Bill.TienGiam</td></tr>
                            <tr><td></td><td></td><td>Phí Ship: @ViewBag.Bill.TienShip</td><td>Tổng tiền phải thanh toán: @ViewBag.Bill.ThanhTien</td></tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }


</section>