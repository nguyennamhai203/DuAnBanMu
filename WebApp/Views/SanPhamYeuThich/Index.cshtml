@model IEnumerable<Shop_Models.Entities.SanPhamYeuThich>

@{
    ViewData["Title"] = "Index";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/themify-icons/0.1.2/css/themify-icons.css" rel="stylesheet"> <!-- Add this for the heart icon -->

<style>
    #traitim {
        font-size: 100px;
        display: flex;
        justify-content: center;
        align-items: center;
        color: red; /* Change color to red */
    }
</style>

<div class="container">
    <div class="text-center mb-4">
        <span class="ti-heart" id="traitim"></span>
    </div>
    <h1 class="display-4 text-center mb-5">Danh sách sản phẩm yêu thích</h1>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center" role="alert">
            Không có sản phẩm yêu thích nào.
        </div>
        <div class="text-center mt-4">
            <a href="/Home/Index" class="btn btn-primary">Trở về trang chủ</a>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Mã sản phẩm</th>
                        <th scope="col">Giá bán</th>
                        <th scope="col">Trạng thái khuyến mãi</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@(item.ChiTietSanPham != null ? item.ChiTietSanPham.MaSanPham : "N/A")</td>
                            <td>@(item.ChiTietSanPham != null ? item.ChiTietSanPham.GiaBan.ToString() : "N/A")</td>
                            <td>
                                @(item.ChiTietSanPham != null && item.ChiTietSanPham.TrangThaiKhuyenMai == null ? "Not Error" : "Error")
                            </td>
                            <td>
                                @Html.ActionLink("Chi tiết", "Details", new { id = item.ChiTietSanPhamId }, new { @class = "btn btn-primary btn-sm mr-2" })
                                @Html.ActionLink("Xóa", "DeleteSPYT", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>